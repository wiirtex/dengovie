    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/dengovie", // Указывает на корневую директорию проекта
            "showLog": true,
            "buildFlags": "-tags=dev", // Флаги сборки (если нужны)
            "cwd": "${workspaceFolder}", // Рабочая директория
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "${workspaceFolder}"
                }
            ]
        }
    ]
}